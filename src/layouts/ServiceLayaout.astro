---
// src/layouts/ServiceLayout.astro
const { frontmatter } = Astro.props;
---

<html lang="es">
<head>
  <title>{frontmatter.title} | Policlínico RDV</title>
  <meta name="description" content={frontmatter.description} />
</head>
<body>
  <article class="service-page">
    <header class="service-header">
      <h1>{frontmatter.title}</h1>
      <p class="service-description">{frontmatter.description}</p>
      <img 
        src={frontmatter.coverImage} 
        alt={`Imagen de portada para ${frontmatter.title}`} 
        class="service-cover"
        loading="lazy"
      />
    </header>

    <section class="service-content">
      <slot /> <!-- Aquí se inyecta el contenido MDX -->
    </section>
  </article>
</body>
</html>

<style>
  .service-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .service-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .service-cover {
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin-top: 1rem;
  }

  .service-content {
    line-height: 1.6;
  }

  .service-content h2 {
    color: var(--color-blue-dark);
    margin-top: 2rem;
  }

  .service-content ul {
    list-style: disc;
    margin-left: 2rem;
  }
</style>