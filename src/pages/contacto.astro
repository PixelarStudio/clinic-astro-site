---
import Layout from "../layouts/Layout.astro";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
---

<Layout title="Contáctanos - VDR Salud">
  <ClientRouter />

  <!-- Sección HERO con fondo, título y subtítulo -->
  <section class="relative w-full min-h-[30vh] flex items-center justify-center text-white">
    <div class="absolute inset-0">
      <img
        src="/images/med-2.webp"
        alt="Fondo Contacto"
        class="w-full h-full object-cover"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gray-900 opacity-50"></div>
    </div>
    <div class="relative z-10 text-center px-4 py-8">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold
      transition:name()">Contáctanos</h1>
      <p class="mt-4 text-lg sm:text-xl">
        Conéctate con nosotros para recibir toda la información que necesitas.
      </p>
    </div>
  </section>

  <!-- Sección del Formulario -->
  <section class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <form
      action="https://formspree.io/f/xnqoqzqz"
      method="POST"
      class="bg-white shadow-lg rounded-lg p-6 border border-gray-200"
    >
      <div class="mb-4">
        <label for="name" class="block text-sm font-semibold text-gray-800">Nombre</label>
        <input
          type="text"
          id="name"
          name="name"
          required
          placeholder="Ej. Juan Pérez"
          class="mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-400"
        />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-sm font-semibold text-gray-800">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="Ej. correo@ejemplo.com"
          class="mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-400"
        />
      </div>
      <div class="mb-4">
        <label for="message" class="block text-sm font-semibold text-gray-800">Mensaje</label>
        <textarea
          id="message"
          name="message"
          required
          rows="5"
          placeholder="Escribe aquí tu consulta..."
          class="mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-blue-400"
        ></textarea>
      </div>
      <div class="text-center">
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 transition-all duration-300 text-white font-medium text-lg px-6 py-3 rounded-lg shadow-md"
        >
          Enviar
        </button>
      </div>
    </form>
  </section>
</Layout>
