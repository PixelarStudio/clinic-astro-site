---
import "../../styles/global.css";
const links = [
  { href: "/", text: "Inicio" },
  { href: "/especialidades", text: "Especialidades" },
  { href: "/quienes-somos", text: "Quiénes Somos" },
  { href: "/novedades", text: "Novedades" },
  { href: "/contacto", text: "Contacto" },
  { href: "/unite", text: "Unite a Nosotros" },
];
---


<div class="nav-container">
  <a href="/" class="logo w-65"><img src="../../public/images/Logo-vdr.png" alt=""></a>
  <nav>
    <ul class="menu" id="menu">
      {links.map((link) => (
        <li class="nav-item">
          <a href={link.href} class="nav-link">{link.text}</a>
        </li>
      ))}
    </ul>
  </nav>
  <div id="hamburger" class="hamburger">☰</div>
</div>

<style>
  .scrolled {
    background: rgba(0, 0, 0, 0.8);
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    color: black;
  }

  .logo {
    font-size: 1.8rem;
    font-weight: bold;
    color: var(--text-light);
    text-decoration: none;
    padding: 8px;
  }

  .menu {
    display: flex;
    list-style: none;
    gap: 1.5rem;
  }

  .menu li a {
    color: var(--text-light);
    text-decoration: none;
    font-size: 1.2rem;
    transition: color 0.3s;
    color: blueviolet;
  }

  .menu li a:hover {
    color: violet;
  }

</style>
