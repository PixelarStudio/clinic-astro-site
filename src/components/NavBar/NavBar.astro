---
const links = [
  { href: "/", text: "Inicio" },
  { href: "/especialidades", text: "Especialidades" },
  { href: "/contacto", text: "Contacto" },
];

export const prerender = true;
---

<nav class="w-full bg-white shadow-md fixed top-0 left-0 z-50">
  <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img src="/images/Logo.webp" alt="Logo VDR Salud" class="w-52" />
    </a>
    
    <!-- Menú Desktop -->
    <div class="hidden lg:flex space-x-6">
      {links.map((link) => (
        <a
          href={link.href}
          class="text-lg text-blue-700 transition-colors duration-300 hover:text-green-400 focus:outline-none focus:ring-2 focus:ring-green-400"
        >
          {link.text}
        </a>
      ))}
    </div>

    <!-- Menú Mobile/Tablet -->
    <div class="lg:hidden relative">
      <input type="checkbox" id="menu-toggle" class="hidden peer" />
      <label for="menu-toggle" class="cursor-pointer peer z-50 relative">
        <svg
          class="w-8 h-8 text-black"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </label>

      <!-- Menú Mobile -->
      <div id="mobileMenu" class="fixed inset-0 w-full h-full bg-white shadow-lg transition-all duration-300 transform -translate-y-full peer-checked:translate-y-0 flex flex-col items-center justify-center z-40">
        <ul class="space-y-6 text-center w-full">
          {links.map((link) => (
            <li class="w-full">
              <a
                href={link.href}
                class="block w-full py-4 text-xl text-blue-700 hover:bg-gray-200 hover:text-green-500 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-400"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</nav>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenu = document.getElementById('mobileMenu');
    const menuToggle = document.getElementById('menu-toggle');
    const menuLinks = document.querySelectorAll('#mobileMenu a');

    menuLinks.forEach(link => {
      link.addEventListener('click', () => {
        menuToggle.checked = false;  // Cierra el menú al hacer clic en un enlace
        mobileMenu.classList.add('-translate-y-full');  // Oculta el menú de manera visual
      });
    });
  });
</script>







