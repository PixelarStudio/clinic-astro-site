---
const slides = [
  "Especialidades Médicas de Alta Calidad",
  "RDV Salud: Atención Personalizada",
  "Cobertura para pacientes de Dock Sud e IOMA"
];

let index = 0;
let currentSlide = slides[index];

setInterval(() => {
  index = (index + 1) % slides.length;
  currentSlide = slides[index];
}, 4000);
---

<section class="hero">
  <div class="hero-overlay">
    <div class="hero-text">
      <h1>{currentSlide}</h1>
    </div>
  </div>
</section>

<style>
.hero {
  height: 60vh;
  background: url('/images/hero.jpg') no-repeat center center/cover;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.hero-overlay {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-text {
  color: white;
  font-size: 2rem;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
  text-align: center;
  font-weight: bold;
}
</style>
